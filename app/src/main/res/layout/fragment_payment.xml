        <TextView
            android:id="@+id/balanceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="20dp"
            android:text="@string/balanceTextView"
            android:textAlignment="textEnd"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--            android:backgroundTint="@color/lightBlue"-->
        <!--            android:textColor="@color/black"-->
        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:text="@string/sendButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/balanceTextView" />

        <Button
            android:id="@+id/contactsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/contactsButton"
            app:layout_constraintEnd_toEndOf="@+id/amountEditText"
            app:layout_constraintTop_toBottomOf="@+id/amountEditText" />

        <EditText
            android:id="@+id/amountEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="@string/amountEditText"
            android:inputType="numberDecimal"
            android:importantForAutofill="no"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="@+id/destinationEditText"
            app:layout_constraintStart_toStartOf="@+id/destinationEditText"
            app:layout_constraintTop_toBottomOf="@+id/destinationEditText"/>

        <EditText
            android:id="@+id/destinationEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:ems="10"
            android:hint="@string/destinationEditText"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/balanceTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
